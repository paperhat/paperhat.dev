@prefix wd:   <https://paperhat.dev/ns/wd#> .
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:  <http://www.w3.org/2001/XMLSchema#> .

#####################################################################
# Classes
#####################################################################

wd:Composition        a rdfs:Class .
wd:Canvas             a rdfs:Class .
wd:View               a rdfs:Class .

wd:ElementType        a rdfs:Class .
wd:ElementInstance    a rdfs:Class .
wd:GroupInstance      a rdfs:Class .

wd:Style              a rdfs:Class .
wd:Paint              a rdfs:Class .
wd:Stroke             a rdfs:Class .
wd:TypographicStyle   a rdfs:Class .
wd:Typeface           a rdfs:Class .

wd:GridSystem         a rdfs:Class .
wd:GridUnit           a rdfs:Class .
wd:ColumnUnit         a rdfs:Class ; rdfs:subClassOf wd:GridUnit .
wd:RowUnit            a rdfs:Class ; rdfs:subClassOf wd:GridUnit .
wd:GutterUnit         a rdfs:Class ; rdfs:subClassOf wd:GridUnit .
wd:BaselineGrid       a rdfs:Class .

wd:Region             a rdfs:Class .
wd:Layer              a rdfs:Class .

wd:Rect               a rdfs:Class .
wd:Transform          a rdfs:Class .

wd:Principle          a rdfs:Class .
wd:PrincipleStatement a rdfs:Class .
wd:FigureGroundStatement a rdfs:Class ; rdfs:subClassOf wd:PrincipleStatement .

wd:Role               a rdfs:Class .
wd:CommunicativeIntent a rdfs:Class .

#####################################################################
# Controlled vocabulary instances
#####################################################################

# Principles (controlled terms)
wd:Balance       a wd:Principle .
wd:Symmetry      a wd:Principle .
wd:Asymmetry     a wd:Principle .
wd:Contrast      a wd:Principle .
wd:FigureGround  a wd:Principle .
wd:Closure       a wd:Principle .
wd:Tension       a wd:Principle .
wd:Proportion    a wd:Principle .
wd:Movement      a wd:Principle .
wd:Hierarchy     a wd:Principle .
wd:Rhythm        a wd:Principle .
wd:FramePrinciple a wd:Principle .

# Roles (controlled terms)
wd:Title       a wd:Role .
wd:Subtitle    a wd:Role .
wd:BodyText    a wd:Role .
wd:Caption     a wd:Role .
wd:Callout     a wd:Role .
wd:Decoration  a wd:Role .
wd:Navigation  a wd:Role .
wd:DataInk     a wd:Role .

# Communicative intents (controlled terms)
wd:Inform      a wd:CommunicativeIntent .
wd:Persuade    a wd:CommunicativeIntent .
wd:Instruct    a wd:CommunicativeIntent .
wd:Brand       a wd:CommunicativeIntent .
wd:Warn        a wd:CommunicativeIntent .
wd:Entertain   a wd:CommunicativeIntent .

#####################################################################
# Ownership / closure properties
#####################################################################

wd:owns
  a rdf:Property ;
  rdfs:domain wd:Composition ;
  rdfs:range rdfs:Resource .

wd:ownedBy
  a rdf:Property ;
  rdfs:domain rdfs:Resource ;
  rdfs:range wd:Composition .

#####################################################################
# Composition structure properties
#####################################################################

wd:hasCanvas
  a rdf:Property ;
  rdfs:domain wd:Composition ;
  rdfs:range wd:Canvas .

wd:hasView
  a rdf:Property ;
  rdfs:domain wd:Composition ;
  rdfs:range wd:View .

wd:hasElement
  a rdf:Property ;
  rdfs:domain wd:Composition ;
  rdfs:range wd:ElementInstance .

wd:hasGrid
  a rdf:Property ;
  rdfs:domain wd:Composition ;
  rdfs:range wd:GridSystem .

wd:hasRegion
  a rdf:Property ;
  rdfs:domain wd:Composition ;
  rdfs:range wd:Region .

wd:hasLayer
  a rdf:Property ;
  rdfs:domain wd:Composition ;
  rdfs:range wd:Layer .

wd:intent
  a rdf:Property ;
  rdfs:domain wd:Composition ;
  rdfs:range wd:CommunicativeIntent .

# Explicit linkage from Composition to its principle statements (reifies critique)
wd:expresses
  a rdf:Property ;
  rdfs:domain wd:Composition ;
  rdfs:range wd:PrincipleStatement .

#####################################################################
# Instance linkage / grouping properties
#####################################################################

wd:instanceOf
  a rdf:Property ;
  rdfs:domain wd:ElementInstance ;
  rdfs:range wd:ElementType .

wd:style
  a rdf:Property ;
  rdfs:domain wd:ElementInstance ;
  rdfs:range wd:Style .

wd:frame
  a rdf:Property ;
  rdfs:domain wd:ElementInstance ;
  rdfs:range wd:Rect .

wd:transform
  a rdf:Property ;
  rdfs:domain wd:ElementInstance ;
  rdfs:range wd:Transform .

wd:zIndex
  a rdf:Property ;
  rdfs:domain wd:ElementInstance ;
  rdfs:range xsd:integer .

wd:layer
  a rdf:Property ;
  rdfs:domain wd:ElementInstance ;
  rdfs:range wd:Layer .

wd:group
  a rdf:Property ;
  rdfs:domain wd:ElementInstance ;
  rdfs:range wd:GroupInstance .

wd:member
  a rdf:Property ;
  rdfs:domain wd:GroupInstance ;
  rdfs:range wd:ElementInstance .

wd:semanticRole
  a rdf:Property ;
  rdfs:domain wd:ElementInstance ;
  rdfs:range wd:Role .

#####################################################################
# Rect properties
#####################################################################

wd:x a rdf:Property ; rdfs:domain wd:Rect ; rdfs:range xsd:decimal .
wd:y a rdf:Property ; rdfs:domain wd:Rect ; rdfs:range xsd:decimal .
wd:w a rdf:Property ; rdfs:domain wd:Rect ; rdfs:range xsd:decimal .
wd:h a rdf:Property ; rdfs:domain wd:Rect ; rdfs:range xsd:decimal .

#####################################################################
# Transform properties (minimal affine)
#####################################################################

wd:tx          a rdf:Property ; rdfs:domain wd:Transform ; rdfs:range xsd:decimal .
wd:ty          a rdf:Property ; rdfs:domain wd:Transform ; rdfs:range xsd:decimal .
wd:rotationDeg a rdf:Property ; rdfs:domain wd:Transform ; rdfs:range xsd:decimal .
wd:sx          a rdf:Property ; rdfs:domain wd:Transform ; rdfs:range xsd:decimal .
wd:sy          a rdf:Property ; rdfs:domain wd:Transform ; rdfs:range xsd:decimal .

#####################################################################
# Style / paint / stroke properties
#####################################################################

wd:fill
  a rdf:Property ;
  rdfs:domain wd:Style ;
  rdfs:range wd:Paint .

wd:stroke
  a rdf:Property ;
  rdfs:domain wd:Style ;
  rdfs:range wd:Stroke .

wd:opacity
  a rdf:Property ;
  rdfs:domain wd:Style ;
  rdfs:range xsd:decimal .

wd:typeStyle
  a rdf:Property ;
  rdfs:domain wd:Style ;
  rdfs:range wd:TypographicStyle .

wd:paintKind
  a rdf:Property ;
  rdfs:domain wd:Paint ;
  rdfs:range xsd:string .

wd:paintValue
  a rdf:Property ;
  rdfs:domain wd:Paint ;
  rdfs:range xsd:string .

wd:strokeWidth
  a rdf:Property ;
  rdfs:domain wd:Stroke ;
  rdfs:range xsd:decimal .

#####################################################################
# Typography properties
#####################################################################

wd:typeface
  a rdf:Property ;
  rdfs:domain wd:TypographicStyle ;
  rdfs:range wd:Typeface .

wd:fontSize
  a rdf:Property ;
  rdfs:domain wd:TypographicStyle ;
  rdfs:range xsd:decimal .

wd:fontWeight
  a rdf:Property ;
  rdfs:domain wd:TypographicStyle ;
  rdfs:range xsd:integer .

wd:leading
  a rdf:Property ;
  rdfs:domain wd:TypographicStyle ;
  rdfs:range xsd:decimal .

wd:tracking
  a rdf:Property ;
  rdfs:domain wd:TypographicStyle ;
  rdfs:range xsd:decimal .

#####################################################################
# Grid properties
#####################################################################

wd:columnCount
  a rdf:Property ;
  rdfs:domain wd:GridSystem ;
  rdfs:range xsd:integer .

wd:rowCount
  a rdf:Property ;
  rdfs:domain wd:GridSystem ;
  rdfs:range xsd:integer .

wd:hasUnit
  a rdf:Property ;
  rdfs:domain wd:GridSystem ;
  rdfs:range wd:GridUnit .

wd:baselineGrid
  a rdf:Property ;
  rdfs:domain wd:GridSystem ;
  rdfs:range wd:BaselineGrid .

wd:baselineStep
  a rdf:Property ;
  rdfs:domain wd:BaselineGrid ;
  rdfs:range xsd:decimal .

#####################################################################
# Principle statement properties
#####################################################################

wd:principleType
  a rdf:Property ;
  rdfs:domain wd:PrincipleStatement ;
  rdfs:range wd:Principle .

wd:scope
  a rdf:Property ;
  rdfs:domain wd:PrincipleStatement ;
  rdfs:range rdfs:Resource .

wd:participant
  a rdf:Property ;
  rdfs:domain wd:PrincipleStatement ;
  rdfs:range wd:ElementInstance .

# Figureâ€“ground specialization
wd:foreground
  a rdf:Property ;
  rdfs:domain wd:FigureGroundStatement ;
  rdfs:range wd:ElementInstance .

wd:background
  a rdf:Property ;
  rdfs:domain wd:FigureGroundStatement ;
  rdfs:range rdfs:Resource .

#####################################################################
# Responsive/adaptive policy classes
#####################################################################

wd:Policy             a rdfs:Class .
wd:Condition          a rdfs:Class .
wd:Action             a rdfs:Class .
wd:ContextKey         a rdfs:Class .
wd:ComparisonOperator a rdfs:Class .
wd:ConflictStrategy   a rdfs:Class .
wd:ActionMode         a rdfs:Class .

#####################################################################
# Responsive/adaptive policy controlled terms (1.0.0)
#####################################################################

# Context keys
wd:ViewportWidthPx        a wd:ContextKey .
wd:ViewportHeightPx       a wd:ContextKey .
wd:ViewportAspectRatio    a wd:ContextKey .
wd:ViewportOrientation    a wd:ContextKey .
wd:DeviceClass            a wd:ContextKey .
wd:ReducedMotionPreference a wd:ContextKey .

# Comparison operators
wd:OpEq  a wd:ComparisonOperator .
wd:OpNe  a wd:ComparisonOperator .
wd:OpLt  a wd:ComparisonOperator .
wd:OpLte a wd:ComparisonOperator .
wd:OpGt  a wd:ComparisonOperator .
wd:OpGte a wd:ComparisonOperator .

# Conflict strategies
wd:ErrorOnConflict    a wd:ConflictStrategy .
wd:HigherPriorityWins a wd:ConflictStrategy .
wd:FirstMatchWins     a wd:ConflictStrategy .

# Action modes
wd:ReplaceAll a wd:ActionMode .
wd:Add        a wd:ActionMode .
wd:Remove     a wd:ActionMode .

#####################################################################
# Responsive/adaptive policy properties
#####################################################################

wd:hasPolicy
  a rdf:Property ;
  rdfs:domain wd:Composition ;
  rdfs:range wd:Policy .

wd:appliesTo
  a rdf:Property ;
  rdfs:domain wd:Policy ;
  rdfs:range rdfs:Resource .

wd:hasCondition
  a rdf:Property ;
  rdfs:domain wd:Policy ;
  rdfs:range wd:Condition .

wd:hasAction
  a rdf:Property ;
  rdfs:domain wd:Policy ;
  rdfs:range wd:Action .

wd:priority
  a rdf:Property ;
  rdfs:domain wd:Policy ;
  rdfs:range xsd:integer .

wd:conflictStrategy
  a rdf:Property ;
  rdfs:domain wd:Policy ;
  rdfs:range wd:ConflictStrategy .

wd:enabled
  a rdf:Property ;
  rdfs:domain wd:Policy ;
  rdfs:range xsd:boolean .

wd:contextKey
  a rdf:Property ;
  rdfs:domain wd:Condition ;
  rdfs:range wd:ContextKey .

wd:operator
  a rdf:Property ;
  rdfs:domain wd:Condition ;
  rdfs:range wd:ComparisonOperator .

wd:conditionValueDecimal
  a rdf:Property ;
  rdfs:domain wd:Condition ;
