wd:conditionValueInteger
  a rdf:Property ;
  rdfs:domain wd:Condition ;
  rdfs:range xsd:integer .

wd:conditionValueString
  a rdf:Property ;
  rdfs:domain wd:Condition ;
  rdfs:range xsd:string .

wd:conditionValueBoolean
  a rdf:Property ;
  rdfs:domain wd:Condition ;
  rdfs:range xsd:boolean .

wd:actionMode
  a rdf:Property ;
  rdfs:domain wd:Action ;
  rdfs:range wd:ActionMode .

wd:targetNode
  a rdf:Property ;
  rdfs:domain wd:Action ;
  rdfs:range rdfs:Resource .

wd:targetProperty
  a rdf:Property ;
  rdfs:domain wd:Action ;
  rdfs:range rdf:Property .

wd:actionValueDecimal
  a rdf:Property ;
  rdfs:domain wd:Action ;
  rdfs:range xsd:decimal .

wd:actionValueInteger
  a rdf:Property ;
  rdfs:domain wd:Action ;
  rdfs:range xsd:integer .

wd:actionValueString
  a rdf:Property ;
