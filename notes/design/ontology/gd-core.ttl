gd:semanticRole
  a rdf:Property ;
  rdfs:domain gd:ElementInstance ;
  rdfs:range gd:Role .

#####################################################################
# Rect properties
#####################################################################

gd:x a rdf:Property ; rdfs:domain gd:Rect ; rdfs:range xsd:decimal .
gd:y a rdf:Property ; rdfs:domain gd:Rect ; rdfs:range xsd:decimal .
gd:w a rdf:Property ; rdfs:domain gd:Rect ; rdfs:range xsd:decimal .
gd:h a rdf:Property ; rdfs:domain gd:Rect ; rdfs:range xsd:decimal .

#####################################################################
# Transform properties (minimal affine)
#####################################################################

gd:tx          a rdf:Property ; rdfs:domain gd:Transform ; rdfs:range xsd:decimal .
gd:ty          a rdf:Property ; rdfs:domain gd:Transform ; rdfs:range xsd:decimal .
gd:rotationDeg a rdf:Property ; rdfs:domain gd:Transform ; rdfs:range xsd:decimal .
gd:sx          a rdf:Property ; rdfs:domain gd:Transform ; rdfs:range xsd:decimal .
gd:sy          a rdf:Property ; rdfs:domain gd:Transform ; rdfs:range xsd:decimal .

