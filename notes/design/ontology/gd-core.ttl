#####################################################################
# Responsive/adaptive policy classes
#####################################################################

gd:Policy             a rdfs:Class .
gd:Condition          a rdfs:Class .
gd:Action             a rdfs:Class .
gd:ContextKey         a rdfs:Class .
gd:ComparisonOperator a rdfs:Class .
gd:ConflictStrategy   a rdfs:Class .
gd:ActionMode         a rdfs:Class .

#####################################################################
# Responsive/adaptive policy controlled terms (1.0.0)
#####################################################################

# Context keys
gd:ViewportWidthPx        a gd:ContextKey .
gd:ViewportHeightPx       a gd:ContextKey .
gd:ViewportAspectRatio    a gd:ContextKey .
gd:ViewportOrientation    a gd:ContextKey .
gd:DeviceClass            a gd:ContextKey .
gd:ReducedMotionPreference a gd:ContextKey .

# Comparison operators
gd:OpEq  a gd:ComparisonOperator .
gd:OpNe  a gd:ComparisonOperator .
gd:OpLt  a gd:ComparisonOperator .
gd:OpLte a gd:ComparisonOperator .
gd:OpGt  a gd:ComparisonOperator .
gd:OpGte a gd:ComparisonOperator .

# Conflict strategies
gd:ErrorOnConflict    a gd:ConflictStrategy .
gd:HigherPriorityWins a gd:ConflictStrategy .
gd:FirstMatchWins     a gd:ConflictStrategy .

# Action modes
gd:ReplaceAll a gd:ActionMode .
gd:Add        a gd:ActionMode .
gd:Remove     a gd:ActionMode .

