[Example: handset-first article homepage intent for web foundry.]
[Context and objective profiles are explicit and then bound into an adaptive intent.]

<AdaptiveContextProfile
	profileId=codex:profile:context:phone-en-us
	viewportWidthPx=390
	viewportHeightPx=844
	zoomLevel=1
	deviceClass=$handset
	inputModality=$touch
	motionPreference=$reduce
	contrastPreference=$more
	colorSchemePreference=$dark
	language=$en-US
	region=$US
	scriptDirection=$ltr
	networkClass=$constrained
	interactionMode=$scan
/>

<AdaptiveObjectiveProfile
	profileId=codex:profile:objective:reading-first
	primaryObjective=$readability
	secondaryObjective=$performance
	readabilityPriority=$must
	accessibilityPriority=$must
	performancePriority=$prefer
	densityGoal=$spacious
	motionGoal=$minimal
	brandExpressionGoal=$restrained
	localizationGoal=$strictLocale
	precedenceProfile=$a11yReadabilityPerformanceBrand
/>

<AdaptiveOptimizationProfile
	profileId=codex:profile:optimization:reading-first
	solverMode=$weightedSum
	quantizationMode=$banded
	reflowMode=$reoptimizeOnBandTransition
	satisficeThreshold=0.8
	relaxationStrategy=$dropLowestWeightFirst
>
	<OptimizationHardConstraint
		constraintKey=$mustNotOverlap
		constraintScope=$global
	/>

	<OptimizationHardConstraint
		constraintKey=$minReadableFont
		constraintScope=$global
		constraintValue="16px"
	/>

	<OptimizationHardConstraint
		constraintKey=$respectReducedMotion
		constraintScope=$global
	/>

	<OptimizationSoftTerm
		termKey=$readability
		weightClass=$critical
		termScope=$global
	/>

	<OptimizationSoftTerm
		termKey=$performance
		weightClass=$high
		termScope=$global
	/>

	<OptimizationSoftTerm
		termKey=$brandExpression
		weightClass=$low
		termScope=$global
	/>

	<RelaxationRule
		relaxOrder=1
		relaxWeightClass=$low
		relaxationAction=$dropTerm
	/>
</AdaptiveOptimizationProfile>

<AdaptiveOverrideSet
	overrideSetId=codex:override:article-homepage:phone
	overrideMode=$strict
>
	<OverrideConstraint
		overrideKind=$pinVisible
		targetRef=urn:node:primary-headline
		overridePriority=$critical
	/>

	<OverrideConstraint
		overrideKind=$hideElement
		targetRef=urn:node:ambient-video
		overridePriority=$high
	/>
</AdaptiveOverrideSet>

<AdaptiveIntent
	intentId=codex:intent:article-homepage:phone
	compositionRef=urn:composition:article-homepage
	contextProfileRef=codex:profile:context:phone-en-us
	objectiveProfileRef=codex:profile:objective:reading-first
	optimizationProfileRef=codex:profile:optimization:reading-first
	overrideSetRef=codex:override:article-homepage:phone
	policySetRef=urn:policyset:article-homepage:1.0.0
	targetFoundry=$web
	viewRef=urn:view:article-homepage
/>
