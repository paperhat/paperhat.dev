<Schema
	id=codex:design-intent:adaptive-objective-profile
	version="1.0.0"
	versionScheme=$Semver
	authoringMode=$SimplifiedMode
	compatibilityClass=$Initial
	namespace="adaptive-objective"
	title="Adaptive Objective Profile Schema"
	description="Deterministic adaptation objectives and tradeoff posture for responsive projection."
>
	<ConceptDefinitions>
		<ConceptDefinition
			id=codex:design-intent:adaptive-objective-profile:AdaptiveObjectiveProfile
			name="AdaptiveObjectiveProfile"
			conceptKind=$Semantic
			entityEligibility=$MustNotBeEntity
		>
			<ContentRules>
				<ForbidsContent />
			</ContentRules>

			<TraitRules>
				<RequiresTrait name="profileId" />

				<RequiresTrait name="primaryObjective" />

				<AllowsTrait name="secondaryObjective" />

				<AllowsTrait name="readabilityPriority" />

				<AllowsTrait name="accessibilityPriority" />

				<AllowsTrait name="performancePriority" />

				<AllowsTrait name="densityGoal" />

				<AllowsTrait name="motionGoal" />

				<AllowsTrait name="brandExpressionGoal" />

				<AllowsTrait name="localizationGoal" />

				<AllowsTrait name="precedenceProfile" />
			</TraitRules>
		</ConceptDefinition>
	</ConceptDefinitions>

	<TraitDefinitions>
		<TraitDefinition
			name="profileId"
			defaultValueType=$IriReference
			cardinality=$Single
			isReferenceTrait=true
		/>

		<TraitDefinition
			name="primaryObjective"
			defaultValueType=$EnumeratedToken
			cardinality=$Single
		>
			<AllowedValues>
				<ValueIsOneOf values=[ $readability, $accessibility, $performance, $taskCompletion, $conversion, $trust, $brandExpression, $delight, $localization ] />
			</AllowedValues>
		</TraitDefinition>

		<TraitDefinition
			name="secondaryObjective"
			defaultValueType=$EnumeratedToken
			cardinality=$Single
		>
			<AllowedValues>
				<ValueIsOneOf values=[ $readability, $accessibility, $performance, $taskCompletion, $conversion, $trust, $brandExpression, $delight, $localization ] />
			</AllowedValues>
		</TraitDefinition>

		<TraitDefinition
			name="readabilityPriority"
			defaultValueType=$EnumeratedToken
			cardinality=$Single
		>
			<AllowedValues>
				<ValueIsOneOf values=[ $must, $prefer, $neutral ] />
			</AllowedValues>
		</TraitDefinition>

		<TraitDefinition
			name="accessibilityPriority"
			defaultValueType=$EnumeratedToken
			cardinality=$Single
		>
			<AllowedValues>
				<ValueIsOneOf values=[ $must, $prefer, $neutral ] />
			</AllowedValues>
		</TraitDefinition>

		<TraitDefinition
			name="performancePriority"
			defaultValueType=$EnumeratedToken
			cardinality=$Single
		>
			<AllowedValues>
				<ValueIsOneOf values=[ $must, $prefer, $neutral ] />
			</AllowedValues>
		</TraitDefinition>

		<TraitDefinition
			name="densityGoal"
			defaultValueType=$EnumeratedToken
			cardinality=$Single
		>
			<AllowedValues>
				<ValueIsOneOf values=[ $spacious, $balanced, $dense ] />
			</AllowedValues>
		</TraitDefinition>

		<TraitDefinition
			name="motionGoal"
			defaultValueType=$EnumeratedToken
			cardinality=$Single
		>
			<AllowedValues>
				<ValueIsOneOf values=[ $minimal, $balanced, $expressive ] />
			</AllowedValues>
		</TraitDefinition>

		<TraitDefinition
			name="brandExpressionGoal"
			defaultValueType=$EnumeratedToken
			cardinality=$Single
		>
			<AllowedValues>
				<ValueIsOneOf values=[ $restrained, $balanced, $bold ] />
			</AllowedValues>
		</TraitDefinition>

		<TraitDefinition
			name="localizationGoal"
			defaultValueType=$EnumeratedToken
			cardinality=$Single
		>
			<AllowedValues>
				<ValueIsOneOf values=[ $strictLocale, $localizedPrefer, $globalNeutral ] />
			</AllowedValues>
		</TraitDefinition>

		<TraitDefinition
			name="precedenceProfile"
			defaultValueType=$EnumeratedToken
			cardinality=$Single
		>
			<AllowedValues>
				<ValueIsOneOf values=[ $a11yReadabilityPerformanceBrand, $readabilityA11yPerformanceBrand, $brandReadabilityA11yPerformance ] />
			</AllowedValues>
		</TraitDefinition>
	</TraitDefinitions>
</Schema>
